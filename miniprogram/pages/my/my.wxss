.personal .personal-header{
  width: 100%;
  height: 500rpx;
  background-color: #ee5454;
}
.personal .personal-header .personal-header-img{
  height: 100%;
  width: 250rpx;
  margin: auto;
  display: flex;
  flex-direction: column;
}
.personal .personal-header .personal-header-img image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin-top: 150rpx;
  margin-left: 50rpx;
}
.personal .personal-header .personal-header-img text{
  margin: 20rpx auto;
}
.personal .personal-info{
  width: 100%;
  height: 150rpx;
  border-bottom: 2rpx solid #ccc;
  display: flex;
  flex-direction: column;
  font-size: 40rpx;
}
.personal .personal-info text{
  margin: 10rpx 0 10rpx 10rpx;
}
.personal .personal-info text:last-child{
  margin: 10rpx 0 10rpx 10rpx;
  color: #777;
}